<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD//EN"
                                        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
 <session-factory>
 
  <property name="hibernate.connection.driver_class">oracle.jdbc.driver.OracleDriver</property>
  <property name="hibernate.connection.url">jdbc:oracle:thin:@127.0.0.1:1521:XE</property>
  <property name="hibernate.connection.username">user2</property>
  <property name="hibernate.connection.password">user2</property>
  <property name="dialect">org.hibernate.dialect.Oracle10gDialect</property>
   
   
  <property name="show_sql">true</property>
  <property name="hibernate.hbm2ddl.auto">create</property>
  <mapping class="com.capg.app.p1.Student"/>
  <mapping class="com.capg.app.p1.Laptop"/>
  <mapping class="com.capg.app.p1.University"/>
  <mapping class="com.capg.app.p1.Examinations"/>
  <mapping class="com.capg.app.p1.InternalExaminations"/>
  <mapping class="com.capg.app.p1.ExternalExaminations"/>
  
 
 </session-factory>
</hibernate-configuration>